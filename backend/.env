# Environment Configuration for Healthcare Sales Orchestration Platform

# Application Settings
APP_NAME="Healthcare Sales Orchestration"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
MASK_PII_IN_LOGS=true

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/healthcare_orchestration

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Security
API_KEY=your-secure-api-key-here
SECRET_KEY=your-secret-key-here-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Helena CRM Integration
HELENA_API_KEY=your-helena-api-key
HELENA_BASE_URL=https://api.helena.com/v1
HELENA_WEBHOOK_SECRET=your-webhook-secret-key

# VAPI (Voice AI) Integration
VAPI_API_KEY=your-vapi-api-key
VAPI_BASE_URL=https://api.vapi.ai
VAPI_PHONE_NUMBER_ID=your-vapi-phone-number-id

# Twilio Integration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+556312345678

# Ninsa√∫de Healthcare API
NINSAUDE_API_KEY=your-ninsaude-api-key
NINSAUDE_BASE_URL=https://api.ninsaude.com/v1
NINSAUDE_CLINIC_ID=your-clinic-id

# WhatsApp Integration (via Helena)
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_BASE_URL=https://api.helena.com/v1/whatsapp

# Job Configuration
JOB_TIMEOUT=300
MAX_JOB_RETRIES=3

# Metrics Configuration
METRICS_RETENTION_DAYS=90
AGGREGATION_INTERVAL_MINUTES=5

# Prometheus Configuration
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc